{
  "analyzers": {
    "core": {
      "enabled": true,
      "rules": {
        "adminusername-should-not-be-literal": {
          "level": "error"
        },
        "artifacts-cleanup": {
          "level": "warning"
        },
        "no-hardcoded-env-urls": {
          "level": "warning"
        },
        "no-hardcoded-location": {
          "level": "warning"
        },
        "no-hardcoded-regions": {
          "level": "warning"
        },
        "no-unused-params": {
          "level": "warning"
        },
        "no-unused-variables": {
          "level": "warning"
        },
        "outputs-should-not-contain-secrets": {
          "level": "error"
        },
        "prefer-user-defined-types": {
          "level": "warning"
        },
        "secure-parameter-default": {
          "level": "error"
        },
        "secure-secrets-in-params": {
          "level": "error"
        }
      }
    }
  }
}
